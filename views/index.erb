<h3><a href="/division/new">Add new Division</a></h3>
<h3><a href="/employee/new">Add new Employee</a></h3>
<h3><a href="/project/new">Add new Project</a></h3><br>

<h4>Here are the list of divisions</h4>
<% if @divisions.any?() %>
  <ul>
    <% @divisions.each() do |division| %>
      <li><a href="/division/<%= division.id() %>"><%= division.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h4>No divisions yet</h4>
<% end %>

<h4>Here are employees</h4>
<% if @employees.any?() %>
  <ul>
    <% @employees.each() do |employee| %>
      <li><a href="/employee/<%= employee.id() %>"><%= employee.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h4>No employees yet</h4>
<% end %>

<h4>Here are projects</h4>
<% if @projects.any?() %>
  <ul>
    <% @projects.current_project().each() do |project| %>
      <li><a href="/project/<%= project.id() %>"><%= project.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h4>No projects yet</h4>
<% end %>
